<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dip" >

    <TextView
        android:id="@+id/about_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dip"
        android:text="@string/about_version"
        android:textColor="@color/secondary_text_color_dark"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_support_email_desc"
        android:textColor="@color/primary_text_color_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/about_support_email_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:paddingBottom="20dip"
        android:text="@string/about_support_email_link"
        android:textColor="@color/light_primary_color"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_dev_email_desc"
        android:textColor="@color/primary_text_color_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/about_dev_email_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:paddingBottom="20dip"
        android:text="@string/about_dev_email_link"
        android:textColor="@color/light_primary_color"
        android:textSize="16sp" />

</LinearLayout><!-- From: file:/C:/Users/Hri100/StudioProjects/QuotesAndSayings/app/src/main/res/layout/about_layout.xml -->