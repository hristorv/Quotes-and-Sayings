<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the image activity -->
    <style name="CustomActionBarTheme" parent="Theme.AppCompat">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="popupTheme">@style/MyPopupMenu</item>
        <item name="itemTextAppearance">@style/TextAppearance</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">

        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>

        <!-- Required for Lollipop. -->
        <!-- <item name="android:overlapAnchor">false</item> -->
    </style>

    <!-- Popup Menu Background Color styles -->
    <style name="MyPopupMenu" parent="Theme.AppCompat">
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/black_overlay</item>
        <item name="displayOptions">disableHome</item>
        <item name="icon">@color/transparent</item>
    </style>
    
    

</resources>